<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para títulos -->
    <style name="AppTitleText">
        <item name="android:fontFamily">@font/josefinsans</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/titulo_color</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <!-- Estilo para texto normal -->
    <style name="AppBodyText">
        <item name="android:fontFamily">@font/sora</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/titulo_color</item>
    </style>

    <!-- Estilo para texto dentro de botones -->
    <style name="AppButtonText">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/boton_texto_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para los botones del menú principal -->
    <style name="MenuButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/boton_texto_color</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/button</item>
    </style>

    <!-- Estilo para el botón de cerrar sesión -->
    <style name="CerrarSesionButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/boton_cerrar_sesion</item>
        <item name="android:textColor">@color/boton_texto_color</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


</resources>
