<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para títulos -->
    <style name="AppTitleText">
        <item name="android:fontFamily">@font/josefinsans</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/titulo_color</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <!-- Estilo para texto normal -->
    <style name="AppBodyText">
        <item name="android:fontFamily">@font/sora</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/titulo_color</item>
    </style>


    <!-- Estilo para botones de menú (LinearLayout clicable con fondo y padding) -->
    <style name="MenuButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_menu_button</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Estilo para textos dentro de los botones del menú -->
    <style name="MenuButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/boton_texto_color</item>
        <item name="android:fontFamily">@font/sora</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Estilo para los íconos dentro de los botones del menú -->
    <style name="MenuButtonIcon">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Estilo para botones primarios (de acción)" -->
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@drawable/bg_rounded_primary_button</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">@color/boton_cerrar_sesion</item>
    </style>

    <!-- Estilo para el texto dentro de botones primarios (de acción) -->
    <style name="PrimaryButtonText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/boton_texto_color</item>
    </style>

    <!-- Estilo para el ícono dentro del botón primario (de acción) -->
    <style name="CerrarSesionIcon">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>


</resources>
