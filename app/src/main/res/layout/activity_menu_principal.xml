<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tituloMenu"
            style="@style/AppTitleText"
            android:text="Menú"
            android:layout_marginBottom="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Botón: Buscar o registrar cliente -->
        <LinearLayout
            android:id="@+id/btnBuscarRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_menu_button"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_newuser"
                android:layout_marginEnd="14dp"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar o registrar cliente"
                android:textSize="20sp"
                android:textColor="@color/boton_texto_color"
                android:fontFamily="@font/inter" />
        </LinearLayout>

        <!-- Botón: Abonar cuota -->
        <LinearLayout
            android:id="@+id/btnAbonarCuota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_menu_button"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_card"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abonar cuota"
                android:textSize="20sp"
                android:textColor="@color/boton_texto_color"
                android:fontFamily="@font/inter" />
        </LinearLayout>

        <!-- Botón: Inscribir en actividades guiadas -->
        <LinearLayout
            android:id="@+id/btnActividadesGuiadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_menu_button"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inscribir en actividades guiadas"
                android:textSize="20sp"
                android:textColor="@color/boton_texto_color"
                android:fontFamily="@font/inter" />
        </LinearLayout>

        <!-- Botón: Consultar cuotas vencidas hoy -->
        <LinearLayout
            android:id="@+id/btnCuotasVencidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_menu_button"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_clock"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultar cuotas vencidas hoy"
                android:textSize="20sp"
                android:textColor="@color/boton_texto_color"
                android:fontFamily="@font/inter" />
        </LinearLayout>

        <!-- Botón: Cerrar sesión -->
        <Button
            android:id="@+id/btnCerrarSesion"
            style="@style/CerrarSesionButtonStyle"
            android:background="@drawable/bg_menu_button"
            android:drawableEnd="@drawable/ic_lock"
            android:text="Cerrar Sesión" />

    </LinearLayout>
</ScrollView>
