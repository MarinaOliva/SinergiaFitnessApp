<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/logo_sinergia"
        android:contentDescription="@string/logo"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/welcomeText"
        style="@style/AppTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a\n\nINERGIA FITNESS"
        android:textAlignment="center"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/blanco"
        android:drawableStart="@drawable/ic_user"
        android:hint="Usuario"
        android:textColor="@color/blanco"
        android:textColorHint="@color/blanco" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ContraseÃ±a"
        android:drawableStart="@drawable/ic_key"
        android:inputType="textPassword"
        android:backgroundTint="@color/blanco"
        android:textColor="@color/blanco"
        android:textColorHint="@color/blanco"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/loginButton"
        style="@style/AppButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:drawableEnd="@drawable/ic_login"
        android:backgroundTint="@color/boton_cerrar_sesion"/>
</LinearLayout>
