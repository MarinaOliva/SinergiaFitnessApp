<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Info del pago -->
    <LinearLayout
        android:id="@+id/contenedorInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/numeroTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NÃºmero"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/importeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Importe cuota"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/fechaPagoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de pago"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/fechaVencimientoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de vencimiento"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

    <!-- Botones Pagar y Salir -->
    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="32dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnPagar"
            style="@style/PrimaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="Pagar"
            android:gravity="center"
            android:textAppearance="@style/PrimaryButtonText" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSalir"
            style="@style/PrimaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="Salir"
            android:gravity="center"
            android:textAppearance="@style/PrimaryButtonText"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
