<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:clipToPadding="false"
        android:clipChildren="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inscribir en actividad guiada"
            android:textAppearance="@style/AppTitleText"
            android:layout_marginBottom="24dp"
            android:textAlignment="center" />

        <!-- Actividad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="8dp">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_act"
                android:contentDescription="Ícono actividad" />

            <Spinner
                android:id="@+id/spinnerActividad"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:popupBackground="@color/grisClaro"/>
        </LinearLayout>

        <!-- Monto a abonar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="8dp">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_money"
                android:contentDescription="Ícono dinero" />

            <Spinner
                android:id="@+id/spinnerMonto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:popupBackground="@color/grisClaro"/>
        </LinearLayout>

        <!-- Nombre y Apellido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="8dp">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_user"
                android:contentDescription="Ícono persona" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/editNombre"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Nombre"
                    android:background="@drawable/edit_text_layer"
                    android:paddingStart="16dp"
                    android:textColorHint="@color/hint_color"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editApellido"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Apellido"
                    android:background="@drawable/edit_text_layer"
                    android:paddingStart="16dp"
                    android:textColorHint="@color/hint_color"
                    android:textColor="#000000"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tipo de documento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="8dp">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_doc"
                android:contentDescription="Ícono documento" />

            <Spinner
                android:id="@+id/spinnerDocumento"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:popupBackground="@color/grisClaro"/>
        </LinearLayout>

        <!-- Número de documento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:padding="8dp">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_id"
                android:contentDescription="Ícono número documento" />

            <EditText
                android:id="@+id/editNumeroDocumento"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nº de documento"
                android:background="@drawable/edit_text_layer"
                android:paddingStart="16dp"
                android:textColorHint="@color/hint_color"
                android:textColor="#000000"
                android:inputType="number" />
        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCancelar"
                style="@style/PrimaryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="Cancelar"
                android:textAppearance="@style/PrimaryButtonText"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnPagar"
                style="@style/PrimaryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="Pagar"
                android:gravity="center"
                android:textAppearance="@style/PrimaryButtonText"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
